@model Order

<div class="row">
	<h3>Making an order</h3>
	<form asp-action="Chekout" method="post" class="form-horizontal">
		<div class="form-group">
			<label asp-for="name"/>
			<div class="col-md-5">
				<input asp-for="name" class="form-control"/>
				<span asp-validation-for="name" class="text-danger"/>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="surname"/>
			<div class="col-md-5">
				<input asp-for="surname" class="form-control"/>
				<span asp-validation-for="surname" class="text-danger"/>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="adress"/>
			<div class="col-md-5">
				<input asp-for="adress" class="form-control"/>
				<span asp-validation-for="adress" class="text-danger"/>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="phone" />
			<div class="col-md-5">
				<input asp-for="phone" class="form-control" />
				<span asp-validation-for="phone" class="text-danger" />
			</div>
		</div>
		<div class="form-group">
			<label asp-for="email" />
			<div class="col-md-5">
				<input asp-for="email" class="form-control" />
				<span asp-validation-for="email" class="text-danger" />
			</div>
		</div>
		<input class="btn btn-success" type="submit" value="Finish"/>
	</form>
</div>